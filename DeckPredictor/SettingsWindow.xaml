<controls:MetroWindow x:Class="DeckPredictor.SettingsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:DeckPredictor"
		xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:system="clr-namespace:System;assembly=mscorlib"
		mc:Ignorable="d"
		BorderBrush="{DynamicResource AccentColorBrush}"
		BorderThickness="1"
		Title="Settings" Width="350" SizeToContent="Height">
	<StackPanel>
	<CheckBox IsChecked="{Binding FitDeckListToDisplay}"
	          Content="Resize predicted cards to fit display"
	          ToolTip="Automatically shrinks cards when deck list is large enough to overlap other UI elements"
	          HorizontalAlignment="Left" Margin="10,5" VerticalAlignment="Top"/>
		<Button Margin="10,15" Click="ButtonReadme_Click">View Readme</Button>
	</StackPanel>
</controls:MetroWindow>
